<h2>Show comment</h2>

<ul>

  <li>
    <strong>Content:</strong>
    <%= @comment.content %>
  </li>

  <li>
    <strong>User:</strong>
    <%= @comment.user_id %>
  </li>

  <li>
    <strong>Post:</strong>
    <%= @comment.post_id %>

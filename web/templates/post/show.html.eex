          <div class="form-group">
            <div class="topic-editor-dropzone dz-clickable"><textarea class="topic-editor form-control" rows="4" tabindex="1" name="reply[body]" id="reply_body" style="height: 80px;"></textarea></div><div id="preview" class="markdown form-control" style="display: none;"></div>
          </div>
          <div class="submit-buttons">
            <button type="submit" id="reply-button" class="btn btn-primary" tabindex="2" ,="" data-disable-with="Reply">Reply</button>
